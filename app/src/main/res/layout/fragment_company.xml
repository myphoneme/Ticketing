    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="1dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_company_sn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="SN"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_project_name"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Name"/>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_company_status"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Status"/>

        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/fragment_company_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:background="@drawable/rounded_corner_blue_bg"
            android:textStyle="bold"
            android:text="Company Add"/>

    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/progressbar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_company_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="5dp"
        />
</LinearLayout>