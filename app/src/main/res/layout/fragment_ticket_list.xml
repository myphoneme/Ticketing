<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:margin="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_ticket_number"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:text="Ticket No"/>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:text="Ticket Title"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_project"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:text="Project"/>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_ticket_description"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:text="Description"/>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/fragment_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:textStyle="bold"
        android:text="Status"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/fragment_ticket_priority"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:text="Priority"/>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/fragment_ticket_created_by"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:text="Created by"/>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/fragment_ticket_image"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:text="Image"/>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/fragment_ticket_image_type"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:text="Image Type"/>

        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/fragment_ticket_add"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="@drawable/rounded_corner_blue_bg"
            android:text="Ticket Add"/>

        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/fragment_logout"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="@drawable/rounded_corner_blue_bg"
            android:text="Logout"/>

        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/fragment_my_ticket"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="@drawable/rounded_corner_blue_bg"
            android:text="My Tickets"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


    </LinearLayout>
    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/progressbar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ticket_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="5dp"
        />
</LinearLayout>