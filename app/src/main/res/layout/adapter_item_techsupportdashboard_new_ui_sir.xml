        <LinearLayout
            android:id="@+id/name_image_view"
            android:gravity="left"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:orientation="vertical"
        >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subheading"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ticket_counts_view"
           android:layout_toLeftOf="@+id/ticket_counts_view2"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tickets Assigned"
                android:textColor="@color/grey"
                android:textSize="13sp" />
            <TextView
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:id="@+id/totalticketsassigned"
                android:background="@drawable/bg_text_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKETS"
                android:textColor="@color/text_white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ticket_counts_view2"
            android:layout_toLeftOf="@+id/ticket_counts_view3"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            >


            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tickets Open"
                android:textColor="@color/grey"
                android:textSize="13sp" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tickets_open"
                android:background="@drawable/bg_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKETS"
                android:textColor="@color/text_white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ticket_counts_view3"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
